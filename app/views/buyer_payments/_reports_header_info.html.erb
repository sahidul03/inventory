<div class="row">
  <div class="col-md-6">
    <h4 class="">
      <span class="text-left">Buyer payment reports</span>
    </h4>
    <h4>
      <span class="text-right">Buyer: <%= @buyer ? @buyer.name : 'All'  %> </span>
    </h4>
    <h4>
      <span class="text-right">Bank Account: <%= @bank_account ? @bank_account.account_number : 'All'  %> </span>
    </h4>
    <h5>
      <% bank_account_id = '' %>
      <% buyer_id = '' %>
      <% year_id = '' %>
      <% month_id = '' %>
      <% month_id = @month.id if @month %>
      <% year_id = @year.name if @year %>
      <% bank_account_id = @bank_account.id if @bank_account %>
      <% buyer_id = @buyer.id if @buyer %>
      <%= link_to monthly_and_yearly_report_download_buyer_payments_path(:format => :xls, :buyer_id => buyer_id, :bank_account_id => bank_account_id, :year_id=> year_id, :month_id=> month_id), target: '_blank'  do %>
          <span class="label label-info"><i class="fa fa-download"></i> Download xls</span>
      <% end %>
      <%= link_to monthly_and_yearly_report_download_buyer_payments_path(:format => :pdf, :buyer_id => buyer_id, :bank_account_id => bank_account_id, :year_id=> year_id, :month_id=> month_id), target: '_blank'  do %>
          <span class="label label-success"><i class="fa fa-download"></i> Download PDF</span>
      <% end %>
    </h5>
  </div>
  <div class="col-md-6 text-right">
    <h4>
      <span class="text-right">Month: <%= @month ? @month.name : 'All'  %> </span>
    </h4>
    <h4>
      <span class="text-right">Year: <%= @year ? @year.name : 'All'  %> </span>
    </h4>
  </div>
</div>