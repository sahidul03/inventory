<!-- begin page #content -->

<!-- begin row -->
<div class="row border-bottom white-bg dashboard-header">

  <!-- begin col-12 -->
  <div class="col-md-12">
    <!-- begin panel -->
    <div class="panel panel-inverse">
      <div class="panel-heading">

        <h3 class="">All buyers</h3>
      </div>
      <!--<div class="alert alert-info fade in">-->
      <!--<button type="button" class="close" data-dismiss="alert">-->
      <!--<span aria-hidden="true">&times;</span>-->
      <!--</button>-->
      <!--TableTools is a plug-in for the DataTables HTML table enhancer, which adds a highly customisable button toolbar to a DataTable.-->
      <!--</div>-->
      <div class="panel-body">
        <div class="table-responsive">
          <% if @buyers.any? %>
          <table id="data-table" class="table table-striped table-bordered nowrap" width="100%">
            <thead>
            <tr>
              <th>Date</th>
              <th>Buyer Name</th>
              <th class="text-center">Status</th>
              <th class="">Creator</th>
              <th class="text-center">Actions</th>
            </tr>
            </thead>
            <tbody>

                <% @buyers.each do |buyer| %>
                    <tr>
                      <td>
                        <%= buyer.created_at.strftime("%d-%m-%Y") %>
                      </td>
                      <td>
                        <%= link_to buyer.name, buyer_path(buyer), data: { no_turbolink: true } %>
                      </td>
                      <td class="text-center">
                        <span class="label label-<%= buyer.isActive ? 'success' : 'danger' %> "><%= buyer.isActive ? 'Active' : 'Inactive' %></span>
                      </td>
                      <td>
                        <%= link_to buyer.user.email, user_information_path(buyer.user.user_information), data: { no_turbolink: true } %>
                      </td>
                      <td class="text-center">

                        <%= link_to edit_buyer_path(buyer), data: { no_turbolink: true }, :class=>"btn btn-info btn-xs" do %>
                            Edit
                            <i class="fa fa-edit"></i>
                        <% end %>

                      </td>
                    </tr>
                <% end %>


            </tbody>
          </table>
          <% else %>
          <h4>There is no buyer, please <%= link_to 'create new buyer', new_buyer_path, data: { no_turblink: true } %></h4>
          <% end %>

        </div>
      </div>
    </div>
    <!-- end panel -->
  </div>
  <!-- end col-10 -->
</div>
<!-- end row -->

<!-- end page #content -->




