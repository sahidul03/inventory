<style>
    .profile-image .profile_image_tag{
        width: 60%;
        border-radius: 4px;
        border: 1px solid #ffffff;

        -webkit-box-shadow: 3px 3px 15px 2px rgba(192,214,200,1);
        -moz-box-shadow: 3px 3px 15px 2px rgba(192,214,200,1);
        box-shadow: 3px 3px 15px 2px rgba(192,214,200,1);
    }
    #user_information_profile_photo{
        display: none;
    }
    #change_profile_form{
        margin-top: 10px;
    }
</style>
<!-- begin page #content -->
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Buyer details info</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to 'Home', root_path, data: { no_turbolink: true } %>
      </li>
      <li>
        <%= link_to 'buyers list', buyers_path, data: { no_turbolink: true } %>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">

  </div>
</div>

<!-- begin profile-section -->
<div class="row border-bottom white-bg dashboard-header">
  <!-- begin profile-left -->
  <div class="col-md-4">
    <!-- begin profile-image -->
    <div class="profile-image">
      <% if @buyer.photo? %>
          <img class="profile_image_tag" src="<%= @buyer.photo %>" fall>
      <% else %>
          <img class="profile_image_tag" src="/img/demo_profile.png" alt="" />
      <% end %>
      <i class="fa fa-user hide"></i>
    </div>
    <!-- end profile-image -->
    <div class="m-b-10">

    </div>
    <!-- begin profile-highlight -->
    <div class="profile-highlight">
      <h3> <%= @buyer.name %> </h3>
      <span class="fa fa-bar-chart-o"></span>
      <small>Buyer's Balance Summary</small>
      <ul class="list-group clear-list m-t">
        <li class="list-group-item fist-item">
                                <span class="pull-right">
                                  <strong>
                                    <%= payment = @buyer_payments.sum(:amount) %> Tk
                                  </strong>
                                </span>
          <span class="label label-success"> <i class="fa fa-money"></i> </span>Total Paid by Buyer
        </li>
        <li class="list-group-item">
                                 <span class="pull-right">
                                   <strong>
                                     <%= export_cost = @export_to_buyer.sum(:total_price) %> Tk
                                   </strong>
                                </span>
          <span class="label label-info"> <i class="fa fa-money"></i> </span>  Total price of all exports
        </li>
        <li class="list-group-item">
                                <span class="pull-right">
                                  <strong>
                                    <%= export_cost - payment > 0 ? (export_cost - payment) : 0 %> Tk
                                  </strong>
                                </span>
          <span class="label label-primary"> <i class="fa fa-money"></i> </span> Total Due to buyer
        </li>
        <li class="list-group-item">
                                 <span class="pull-right">
                                   <strong>
                                     <%= payment - export_cost > 0 ? (payment - export_cost) : 0 %> Tk
                                   </strong>
                                </span>
          <span class="label label-default"> <i class="fa fa-money"></i> </span> Total Advance taken from buyer
        </li>

      </ul>


    </div>
    <!-- end profile-highlight -->
  </div>
  <!-- end profile-left -->
  <!-- begin profile-right -->
  <div class="col-md-8">
    <!-- begin profile-info -->
    <div class="profile-info">
      <!-- begin table -->
      <div class="table-responsive">
        <table class="table table-profile">
          <thead>
          <tr>
            <th></th>
            <th>
              <h3><%= @buyer.name %>  </h3>
            </th>
            <th class="text-right">
              <h4><%= link_to 'Edit profile', edit_buyer_path(@buyer),data: { no_turbolink: true }, :class=>"btn btn-default"  %></h4>
            </th>
          </tr>
          </thead>
          <tbody>
          <!--<tr class="highlight">-->
          <!--<td class="field">Mood</td>-->
          <!--<td><a href="#">Add Mood Message</a></td>-->
          <!--</tr>-->
          <!--<tr class="divider">-->
          <!--<td colspan="2"></td>-->
          <!--</tr>-->
          <tr>
            <td class="field">Contact number</td>
            <td>
              <i class="fa fa-mobile fa-lg m-r-5"></i> <%= @buyer.contact_number %>
              <!--<a href="#" class="m-l-5">Edit</a>-->
            </td>
          </tr>
          <tr>
            <td class="field">Email</td>
            <td>
              <i class="fa fa-envelope fa-lg m-r-5"></i> <%= @buyer.email %>
              <!--<a href="#" class="m-l-5">Edit</a>-->
            </td>
          </tr>

          <tr>
            <td class="field">Skype ID</td>
            <td>
              <%= @buyer.skype_name %>
            </td>
          </tr>
          <tr>
            <td class="field">Fax</td>
            <td>
              <%= @buyer.fax %>
            </td>
          </tr>
          <tr>
            <td class="field">Bank A.C</td>
            <td>
              <%= @buyer.fax %>
            </td>
          </tr>

          <tr>
            <td class="field">Address</td>
            <td>
              <%= @buyer.address %>
            </td>
          </tr>

          <tr>
            <td class="field">Country</td>
            <td>
              <%= @buyer.country %>
            </td>
          </tr>
          <tr>
            <td class="field">Company name</td>
            <td>
              <%= @buyer.company_name %>
            </td>
          </tr>
          <tr>
            <td class="field">Status</td>
            <td>
              <span class="label label-<%= @buyer.isActive ? 'success' : 'danger' %> "><%= @buyer.isActive ? 'Active' : 'Inactive' %></span>
            </td>
          </tr>
          <tr class="divider">
          <td colspan="2"></td>
          </tr>
          </tbody>
        </table>
      </div>
      <!-- end table -->
    </div>
    <!-- end profile-info -->
  </div>
  <!-- end profile-right -->
</div>
<!-- end profile-section -->


<!-- end page #content -->
