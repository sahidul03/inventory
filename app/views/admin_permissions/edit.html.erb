<!-- begin page #content -->


<!-- begin row -->

<div class="row border-bottom white-bg dashboard-header">
  <!-- begin col-md-12 -->
  <div class="col-md-12">
    <!-- begin panel -->
    <div class="panel panel-inverse">
      <!--<div class="panel-heading">-->

        <!--<h3 class="">Permission settings of admin</h3>-->
      <!--</div>-->
      <div class="panel-body">
        <fieldset>
          <legend>Permission settings of admin</legend>
        </fieldset>
        <div class="table-responsive">
          <%= form_for @permission do |f| %>
              <div class="form-group">
                <% if @permission.errors.any? %>
                    <div id="error_explanation">
                      <h2>
                        <%= pluralize(@permission.errors.count, "error") %>
                      </h2>
                      <ul>
                        <% @permission.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                      </ul>
                    </div>
                <% end %>
              </div>
          <table id="data-table" class="table table-striped table-bordered nowrap" width="100%">
            <thead>
            <tr>
              <th>Options</th>
              <th>Status</th>
            </tr>
            </thead>
            <tbody>

                  <tr>
                    <td>Super admin</td>
                    <td>

                      <%= f.check_box :super_admin , :class => 'i-checks' %>

                    </td>
                  </tr>
                  <tr>
                    <td>
                      Admin creation

                    </td>
                    <td>
                         <%= f.check_box :admin_creation, :class => 'i-checks' %>
                    </td>
                  </tr>

            </tbody>
          </table>
              <%= f.submit "Save", :class=>'btn btn-sm btn-primary m-r-5', data: { disable_with: "Saving..." } %>
              <%= link_to 'Back', :back, data: { no_turbolink: true } , :class => 'btn btn-sm btn-default' %>

        <% end %>
        </div>
      </div>
    </div>

    <!-- end panel -->
  </div>
</div>
<!-- end row -->

<!-- end page #content -->


<script>
    $('.i-checks').iCheck({
        checkboxClass: 'icheckbox_square-green',
        radioClass: 'iradio_square-green'
    });
</script>