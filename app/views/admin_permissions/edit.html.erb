<!-- begin page #content -->

<!-- begin breadcrumb -->
<ol class="breadcrumb pull-right">
  <li>
    <%= link_to 'Home', root_path, data: { no_turbolink: true }  %>
  </li>
  <li class="active">Dashboard</li>
</ol>
<!-- end breadcrumb -->
<!-- begin page-header -->
<h1 class="page-header">Set admin permission <small>you can give access to admin from here </small></h1>
<!-- end page-header -->

<!-- begin row -->

<div class="row">
  <!-- begin col-md-12 -->
  <div class="col-md-12">
    <!-- begin panel -->
    <div class="panel panel-inverse">
      <div class="panel-heading">
        <div class="panel-heading-btn">
          <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
          <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
          <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
          <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
        </div>
        <h4 class="panel-title">Permission settings of admin</h4>
      </div>
      <div class="panel-body">
        <fieldset>
          <legend>Access options</legend>
        </fieldset>
        <div class="table-responsive">
          <%= form_for @permission do |f| %>
              <div class="form-group">
                <% if @permission.errors.any? %>
                    <div id="error_explanation">
                      <h2>
                        <%= pluralize(@permission.errors.count, "error") %>
                      </h2>
                      <ul>
                        <% @permission.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                      </ul>
                    </div>
                <% end %>
              </div>
          <table id="data-table" class="table table-striped table-bordered nowrap" width="100%">
            <thead>
            <tr>
              <th>Options</th>
              <th>Status</th>
            </tr>
            </thead>
            <tbody>

                  <tr>
                    <td>Super admin</td>
                    <td>
                      <%= f.check_box :super_admin, data: {:render=>"switchery", :theme=>"default", :change=>"check-switchery-state-text"}%>
                      <a href="#" class="width-100 btn btn-sm btn-primary disabled m-l-10" data-id="switchery-state-text">
                        <%= @permission.super_admin ? 'ON' : 'OFF' %>
                      </a>
                    </td>
                  </tr>
                  <tr>
                    <td>Admin creation</td>
                    <td>
                      <%= f.check_box :admin_creation, data: {:render=>"switchery", :theme=>"default", :change=>"check-switchery-state-text"}%>
                      <a href="#" class="width-100 btn btn-sm btn-primary disabled m-l-10" data-id="switchery-state-text">
                        <%= @permission.admin_creation ? 'ON' : 'OFF' %>
                      </a>
                    </td>
                  </tr>

            </tbody>
          </table>
              <%= f.submit "Save", :class=>'btn btn-sm btn-primary m-r-5', data: { disable_with: "Saving..." } %>
              <%= link_to 'Back', :back, data: { no_turbolink: true } , :class => 'btn btn-sm btn-default' %>

        <% end %>
        </div>
      </div>
    </div>

    <!-- end panel -->
  </div>
</div>
<!-- end row -->

<!-- end page #content -->


<script>
    $(document).ready(function() {
        App.init();
        FormSliderSwitcher.init();
    });
</script>