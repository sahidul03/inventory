  <div class="table-responsive">
    <% if @employee_salaries.any? %>
        <table id="data-table" class="table table-striped table-bordered nowrap" width="100%">
          <thead>
          <tr>
            <th>Date</th>
            <th class="text-right">Amount(tk)</th>
            <th class="text-center">remarks</th>
          </tr>
          </thead>
          <tbody>

          <% @employee_salaries.reverse.each do |report| %>
              <tr>
                <td>
                  <%= report.created_at.strftime("%d-%m-%Y") %>
                </td>
                <td class="text-right">
                  <%= report.amount %>
                </td>
                <td style="max-width: 150px; font-size: 9px; color: #000000" class="text-center">
                  <%= report.remarks %>
                </td>

              </tr>
          <% end %>
          <tr>
            <td style="background:#E5E5E5"   class="text-center">Total amount</td>
            <td style="background:#E5E5E5;" class="text-right">
              <%= @employee_salaries.sum(:amount) %>
            </td>
            <td ></td>
          </tr>


          </tbody>
        </table>
    <% else %>
        <h4>There is no employee salary add report.</h4>
    <% end %>

  </div>
