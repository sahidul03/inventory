<div class="table-responsive">
  <% if @leave_reports.any? %>
      <table id="data-table" class="table table-striped table-bordered nowrap" width="100%">
        <thead>
        <tr>
          <th>Start Date</th>
          <th>End Date</th>
          <th class="text-center">remarks</th>
          <th>Added by</th>
        </tr>
        </thead>
        <tbody>

        <% @leave_reports.reverse.each do |report| %>
            <tr>
              <td>
                <%= report.start_date.strftime("%d-%m-%Y") %>
              </td>
              <td>
                <%= report.end_date.strftime("%d-%m-%Y") %>
              </td>
              <td style="max-width: 150px; font-size: 9px; color: #000000" class="text-center">
                <%= report.remarks %>
              </td>
              <td >
                <%= link_to report.user.email, user_information_path(report.user), data: {  no_turbolink: true } %>
              </td>

            </tr>
        <% end %>

        </tbody>
      </table>
  <% else %>
      <h4>There is no leave report.</h4>
  <% end %>

</div>
