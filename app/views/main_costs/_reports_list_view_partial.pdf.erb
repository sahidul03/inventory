<div class="panel-body">
  <div class="table-responsive">
    <% if @reports.any? %>
        <table id="data-table" class="table table-striped table-bordered nowrap" width="100%">
          <thead>
          <tr>
            <th>Date</th>
            <th>Expense category</th>
            <th>Expense</th>
            <th class="text-center">Amount(tk)</th>
            <th class="text-center">remarks</th>
            <th class="text-center">Added by</th>
          </tr>
          </thead>
          <tbody>

          <% @reports.each do |report| %>
              <tr>
                <td>
                  <%= report.created_at.strftime("%d-%m-%Y") %>
                </td>
                <td>
                  <%= report.expense_category.name %>
                </td>
                <td>
                  <%= report.expense.name %>
                </td>
                <td class="text-right">
                  <%= report.amount %>
                </td>
                <td style="max-width: 150px; font-size: 8px; color: #000000" class="text-center">
                  <%= report.remarks %>
                </td>
                <td>
                  <%= link_to report.user.email, user_information_path(report.user.user_information), data: { no_turbolink: true } %>
                </td>

              </tr>
          <% end %>
          <tr>
            <td style="background:#E5E5E5" colspan="3"  class="text-center">Total amount</td>
            <td style="background:#E5E5E5;" class="text-right">
              <%= @reports.sum(:amount) %>
            </td>
            <td colspan="2"></td>
          </tr>


          </tbody>
        </table>
    <% else %>
        <h4>There is no main cost's report in this duration.</h4>
    <% end %>

  </div>
</div>