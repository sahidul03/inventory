<div class="row">
  <div class="col-md-6">
    <h4 class="">
      <span class="text-left">Main cost reports</span>
    </h4>
    <h4>
      <span class="text-right">Expense category: <%= @expense_category ? @expense_category.name : 'All'  %> </span>
    </h4>
    <h4>
      <span class="text-right">Expense: <%= @expense ? @expense.name : 'All'  %> </span>
    </h4>
    <h5>
      <% expense_category_id = '' %>
      <% bank_account_id = '' %>
      <% expense_id = '' %>
      <% bank_account_id = @bank_account.id if @bank_account %>
      <% expense_category_id = @expense_category.id if @expense_category %>
      <% expense_id = @expense.id if @expense %>
      <%= link_to date_to_date_report_download_main_costs_path(:format => :xls, :bank_account_id => bank_account_id, :expense_id => expense_id, :expense_category_id => expense_category_id, :start_date=> @start_date, :end_date=> @end_date), target: '_blank'  do %>
          <span class="label label-info"><i class="fa fa-download"></i> Download xls</span>
      <% end %>
      <%= link_to date_to_date_report_download_main_costs_path(:format => :pdf, :bank_account_id => bank_account_id, :expense_category_id => expense_category_id, :expense_id => expense_id, :start_date=> @start_date, :end_date=> @end_date), target: '_blank'  do %>
          <span class="label label-success"><i class="fa fa-download"></i> Download PDF</span>
      <% end %>
    </h5>
  </div>
  <div class="col-md-6 text-right">
    <h4>
      <span class="text-right">Start date:  <%= @start_date.strftime("%d-%b, %Y") if @start_date %> </span>
    </h4>
    <h4>
      <span class="text-right">End date:  <%= @end_date.strftime("%d-%b, %Y") if @end_date %> </span>
    </h4>
    <h4>
      <span class="text-right">Bank account: <%= @bank_account ? @bank_account.account_number : 'All'  %> </span>
    </h4>
  </div>
</div>