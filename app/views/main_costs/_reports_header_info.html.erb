<div class="row">
  <div class="col-md-6">
    <h4 class="">
      <span class="text-left">Main cost reports</span>
    </h4>
    <h4>
      <span class="text-right">Expense category: <%= @expense_category ? @expense_category.name : 'All'  %> </span>
    </h4>
    <h4>
      <span class="text-right">Expense: <%= @expense ? @expense.name : 'All'  %> </span>
    </h4>
    <h5>
      <% expense_category_id = '' %>
      <% expense_id = '' %>
      <% year_id = '' %>
      <% month_id = '' %>
      <% expense_category_id = @expense_category.id if @expense_category %>
      <% expense_id = @expense.id if @expense %>
      <% month_id = @month.id if @month %>
      <% year_id = @year.name if @year %>
      <%= link_to monthly_and_yearly_report_download_main_costs_path(:format => :xls, :expense_id => expense_id, :expense_category_id => expense_category_id, :year_id=> year_id, :month_id=> month_id), target: '_blank'  do %>
          <span class="label label-info"><i class="fa fa-download"></i> Download xls</span>
      <% end %>
      <%= link_to monthly_and_yearly_report_download_main_costs_path(:format => :pdf, :expense_id => expense_id, :expense_category_id => expense_category_id, :year_id=> year_id, :month_id=> month_id), target: '_blank'  do %>
          <span class="label label-success"><i class="fa fa-download"></i> Download PDF</span>
      <% end %>
    </h5>
  </div>
  <div class="col-md-6 text-right">
    <h4>
      <span class="text-right">Month: <%= @month ? @month.name : 'All'  %> </span>
    </h4>
    <h4>
      <span class="text-right">Year: <%= @year ? @year.name : 'All'  %> </span>
    </h4>
  </div>
</div>