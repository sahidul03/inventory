<div class="panel-body">
  <div class="table-responsive">
    <% if @reports.any? %>
        <table id="data-table" class="table table-striped table-bordered nowrap" width="100%">
          <thead>
          <tr>
            <th>Entry Date</th>
            <th>Product Type</th>
            <th>Product Color</th>
            <th>Party</th>
            <th class="text-right">Quantity(Kg)</th>
            <th class="text-right">Rate(tk)</th>
            <th class="text-right">Total price(tk)</th>
            <th class="text-right">Convince</th>
            <th class="text-right">Labour cost</th>
            <th class="text-right">Trans. cost</th>
            <th class="text-right">Total cost</th>
            <th class="text-center">Car no</th>
            <th class="text-center">Import date</th>
            <th class="text-center">Remarks</th>
          </tr>
          </thead>
          <tbody>

          <% @reports.each do |report| %>
              <tr>
                <td>
                  <%= report.created_at.strftime("%d-%m-%Y") %>
                </td>
                <td>
                  <%=  report.product_type.name %>
                </td>
                <td>
                  <%=  report.product_color.name %>
                </td>

                <td>
                  <%= link_to report.party.name, party_path(report.party) , data: { no_turbolink: true }  %>
                </td>
                <td class="text-right">
                  <%= report.quantity %>
                </td>
                <td class="text-right">
                  <%= report.rate %>
                </td>
                <td class="text-right">
                  <%= report.total_price %>
                </td>
                <td class="text-right">
                  <%= report.convince %>
                </td>
                <td class="text-right">
                  <%= report.labour_cost %>
                </td>
                <td class="text-right">
                  <%= report.transport_cost %>
                </td>
                <td class="text-right">
                  <%= report.total_cost %>
                </td>
                <td class="text-center">
                  <%= report.car_number %>
                </td>
                <td class="text-center">
                  <%= report.import_date.strftime('%d-%m-%Y') %>
                </td>
                <td style="max-width: 150px; font-size: 8px; color: #000000" class="text-center">
                  <%= report.remarks %>
                </td>

              </tr>
          <% end %>
          <tr>
            <td style="background:#E5E5E5" colspan="4"  class="text-center">Total amount</td>
            <td style="background:#E5E5E5;" class="text-right">
              <%= @reports.sum(:quantity) %>
            </td>
            <td></td>
            <td style="background:#E5E5E5;" class="text-right">
              <%= @reports.sum(:total_price) %>
            </td>
            <td style="background:#E5E5E5;" class="text-right">
              <%= @reports.sum(:convince) %>
            </td>
            <td style="background:#E5E5E5;" class="text-right">
              <%= @reports.sum(:labour_cost) %>
            </td>
            <td style="background:#E5E5E5;" class="text-right">
              <%= @reports.sum(:transport_cost) %>
            </td>
            <td style="background:#E5E5E5;" class="text-right">
              <%= @reports.sum(:total_cost) %>
            </td>
            <td colspan="3"></td>
          </tr>


          </tbody>
        </table>
    <% else %>
        <h4>There is no imported product's report in this duration.</h4>
    <% end %>

  </div>
</div>