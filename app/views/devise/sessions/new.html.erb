

  <div class="row">
    <div class="col-md-3 center">
      <div class="login-box">
        <a class="logo-name text-lg text-center">Restaurant</a>
        <p class="text-center m-t-md">Please login into your account.</p>
        <div class="form-group m-b-20">
          <%= render 'layouts/alert_messages' %>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <!--<form action="http://seantheme.com/color-admin-v1.7/admin/html/index.html" method="POST" class="margin-bottom-0">-->
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, :class=>"form-control", :placeholder => "Email Address" %>
              <!--<input type="text" class="form-control input-lg" placeholder="Email Address" />-->
            </div>
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off" , :class=>"form-control", :placeholder => "Password"%>
              <!--<input type="text" class="form-control input-lg" placeholder="Password" />-->
            </div>
            <div class="login-buttons">
              <%= f.submit "Sign me in", :class=>"btn btn-success btn-block",  data: { disable_with: "Signing..." } %>
            </div>

            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), :class => 'display-block text-center m-t-md text-sm', data: { no_turbolink: true } %>
            <% end -%>
            <p class="text-center m-t-xs text-sm">Do not have an account?</p>

              <%= link_to('Create an account', new_user_registration_path, :class => 'btn btn-default btn-block m-t-md', data: { no_turbolink: true })  %>
            <!--</form>-->
        <% end %>
