<div class="loginColumns animated fadeInDown">
  <div class="row">

    <div class="col-md-6">
      <h2 class="font-bold">Forgot your password</h2>

      <p>
        <%= get_company_info.description %>
      </p>

    </div>
    <div class="col-md-6">
      <div class="ibox-content">


        <%= form_for(resource, as: resource_name, :class => 'm-t', url: password_path(resource_name), html: { method: :post }) do |f| %>
            <!--<form action="http://seantheme.com/color-admin-v1.7/admin/html/index.html" method="POST" class="margin-bottom-0">-->
            <div class="form-group">
              <%= devise_error_messages! %>
            </div>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, :class=>"form-control", :placeholder => "Email Address" %>
              <!--<input type="text" class="form-control input-lg" placeholder="Email Address" />-->
            </div>

            <div class="login-buttons">
              <%= f.submit "Send me reset password instructions", :class=>"btn btn-primary block full-width m-b",  data: { disable_with: "Please wait..." } %>
              <!--<button type="submit" class="btn btn-success btn-block btn-lg">Sign me in</button>-->
            </div>
            <p class="text-muted text-center">
              <small>Do not have an account?</small>
            </p>

            <%= link_to('Create an account', new_user_registration_path, :class => 'btn btn-sm btn-white btn-block', data: { no_turbolink: true })  %>

            <p class="text-muted text-center">
              <small>Already have an account?</small>
            </p>

            <%= link_to('Log In',  new_session_path(resource_name), :class => 'btn btn-sm btn-white btn-block', data: { no_turbolink: true })  %>


          <!--</form>-->
        <% end %>

        <p class="m-t">
        </p>
      </div>
    </div>
  </div>
  <hr/>
  <div class="row">
    <div class="col-md-6">
      Copyright <%= get_company_info.name %>
    </div>
    <div class="col-md-6 text-right">
      <small>Â© 2015-2016</small>
    </div>
  </div>
</div>








