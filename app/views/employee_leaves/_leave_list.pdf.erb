<div class="panel-body">
  <div class="table-responsive">
    <% if @employee_leaves.any? %>
        <table id="data-table" class="table table-striped table-bordered nowrap" width="100%">
          <thead>
          <tr>
            <th>Employee Name</th>
            <th class="text-center">Start date</th>
            <th class="text-center">End date</th>
            <th class="text-center">remarks</th>
            <th class="text-center">Edit</th>
          </tr>
          </thead>
          <tbody>

          <% @employee_leaves.each do |report| %>
              <tr>
                <td>
                  <%= link_to report.employee.name, employee_path(report.employee), data: { no_turbolink: true } %>
                </td>
                <td class="text-center">
                  <%= report.start_date.strftime("%d-%m-%Y") %>
                </td>
                <td class="text-center">
                  <%= report.end_date.strftime("%d-%m-%Y") %>
                </td>
                <td class="text-center">
                  <%= report.remarks %>
                </td>
                <td class="text-center">
                  <%= link_to 'edit', edit_employee_leafe_path(report), data: { no_turbolink: true } %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
    <% else %>
        <h4>There is no leave history.</h4>
    <% end %>

  </div>
</div>