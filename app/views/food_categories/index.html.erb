<!-- begin page #content -->

<!-- begin breadcrumb -->
<ol class="breadcrumb pull-right">
  <li>
    <%= link_to 'Home', root_path, data: { no_turbolink: true }  %>
  </li>
  <li class="active">Food category list page</li>
</ol>
<!-- end breadcrumb -->
<!-- begin page-header -->
<h1 class="page-header">All food categories <small> you can enable or disable admin from here.. </small></h1>
<!-- end page-header -->

<!-- begin row -->
<div class="row">

<!-- begin col-12 -->
<div class="col-md-12">
<!-- begin panel -->
<div class="panel panel-inverse">
<div class="panel-heading">
  <div class="panel-heading-btn">
    <!--<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>-->
    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
    <!--<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>-->
  </div>
  <h4 class="panel-title">All food categories</h4>
</div>
<!--<div class="alert alert-info fade in">-->
  <!--<button type="button" class="close" data-dismiss="alert">-->
    <!--<span aria-hidden="true">&times;</span>-->
  <!--</button>-->
  <!--TableTools is a plug-in for the DataTables HTML table enhancer, which adds a highly customisable button toolbar to a DataTable.-->
<!--</div>-->
<div class="panel-body">
<div class="table-responsive">

<table id="data-table" class="table table-striped table-bordered nowrap" width="100%">
<thead>
<tr>
  <th>Date</th>
  <th>Name</th>
  <th class="text-center">Status</th>
  <th class="text-center">Actions</th>
</tr>
</thead>
<tbody>
<% if @food_categories.any? %>
    <% @food_categories.each do |category| %>
        <tr>
          <td>
            <%= category.created_at.strftime("%d-%m-%Y") %>
          </td>
          <td>
            <%= link_to category.name, food_category_path(category) %>
          </td>
          <td class="text-center">
            <span class="label label-<%= category.isActive ? 'success' : 'danger' %> "><%= category.isActive ? 'Active' : 'Inactive' %></span>
          </td>
          <td class="text-center">

            <%= link_to edit_food_category_path(category), :class=>"btn btn-info btn-xs" do %>
                 Edit
                <i class="fa fa-edit"></i>
            <% end %>

          </td>
        </tr>
    <% end %>
<% end %>


</tbody>
</table>
</div>
</div>
</div>
<!-- end panel -->
</div>
<!-- end col-10 -->
</div>
<!-- end row -->

<!-- end page #content -->




<script>
    $(document).ready(function() {
        TableManageTableTools.init();
    });

</script>