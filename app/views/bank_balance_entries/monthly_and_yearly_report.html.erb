<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-md-4">
    <h2>Bank Balance Entry Reports</h2>

  </div>
  <div class="col-md-8">
    <h2 class="text-right">
        <%= select_tag 'bank_account_id', options_from_collection_for_select(BankAccount.all,:id, :account_number), { :class =>'btn btn-white',:include_blank => 'Select bank account' } %>
        <%= select_tag 'month_id', options_from_collection_for_select(Month.all,:id, :name), { :class =>'btn btn-white',:include_blank => 'Select month' } %>
        <%= select_tag 'year_id', options_from_collection_for_select(Year.all,:id, :name), { :class =>'btn btn-white',:include_blank => 'Select year' } %>
        <span id="report_search" class="btn btn-default">
          <i class="fa fa-search"></i>
          Search
        </span>
    </h2>
  </div>
</div>


<!-- begin page #content -->

<!-- begin row -->
<div class="row border-bottom white-bg dashboard-header">

  <!-- begin col-12 -->
  <div class="col-md-12">
    <!-- begin panel -->
    <div class="panel panel-inverse">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-6">
            <h4 class="">
              <span class="text-left">Bank balance entry reports</span>
            </h4>
            <h4>
              <span class="text-right">Bank Account: <%= @bank_account ? @bank_account.account_number : 'All'  %> </span>
            </h4>
            <h5>
              <%= link_to monthly_and_yearly_report_bank_balance_entries_path(:format => :xls), target: '_blank'  do %>
                  <span class="label label-info"><i class="fa fa-download"></i> Download xls</span>
              <% end %>
              <%= link_to monthly_and_yearly_report_bank_balance_entries_path(:format => :pdf), target: '_blank'  do %>
                  <span class="label label-success"><i class="fa fa-download"></i> Download PDF</span>
              <% end %>
            </h5>
          </div>
          <div class="col-md-6 text-right">
            <h4>
              <span class="text-right">Month: <%= @month ? @month.name : 'All'  %> </span>
            </h4>
            <h4>
              <span class="text-right">Year: <%= @year ? @year.name : 'All'  %> </span>
            </h4>
          </div>
        </div>
      </div>
      <!--<div class="alert alert-info fade in">-->
      <!--<button type="button" class="close" data-dismiss="alert">-->
      <!--<span aria-hidden="true">&times;</span>-->
      <!--</button>-->
      <!--TableTools is a plug-in for the DataTables HTML table enhancer, which adds a highly customisable button toolbar to a DataTable.-->
      <!--</div>-->
      <%= render 'bank_balance_entries/reports_list_view_partial' %>
    </div>
    <!-- end panel -->
  </div>
  <!-- end col-10 -->
</div>
<!-- end row -->

<!-- end page #content -->




<script>

  $('#report_search').click(function(){
      var bank_account_id =$('#bank_account_id').val();
      var year_id =$('#year_id').val();
      var month_id =$('#month_id').val();
      $.ajax({
          url:'<%= monthly_and_yearly_report_search_bank_balance_entries_path %>',
          type: 'get',
          data:{ bank_account_id: bank_account_id, year_id: year_id, month_id:month_id }
      });
  });

</script>